<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title><%= titulo %></title>
</head>
<body id="lista">
    <nav id="L">
        <a href="./index"><input type="button" value="HOME" id="nav"></button></a>
        <a href="./cadastro"><input type="button" value="CADASTRO" id="nav"></button></a>
        <!-- tirar botao de detalhes -->
    </nav>
    <header>
        <h1><%= titulo %></h1>
    </header>
    <main>
        <section id="heroi">
        <% herois.forEach(item => { %>
            <!-- <a href="mudar/<%= herois.indexOf(item) %>"></a> -->
            <img id="herois" src="<%= item.img %>" alt="<%= item.nome %>">
            <ul>
                <li>Nome: <%= item.nome %></li>
                <li>Força: <%= item.forca %></li>
                <li>Velocidade: <%= item.vel %></li>
                <li>Habilidade: <%= item.hab %></li>
                <li>Equipamento: <%= item.equip %></li>
                <li>Inteligência: <%= item.int %></li>
                <li>Poder: <%= item.poder %></li>
            </ul>
        <% }) %>
        </section>
    </main>

<script src="js/lista.js"></script>
</body>
</html>